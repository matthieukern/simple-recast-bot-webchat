{
  "name": "simple-recast-bot-webchat",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "yarn run dev:server",
    "dev:build": "webpack --config webpack/webpack.dev.js",
    "dev:server": "cross-env NODE_ENV=development nodemon --config nodemon.json",
    "dist:run": "node dist/server/server.bundle.js",
    "dist:build": "yarn run dist:build-server && yarn run dist:build-client",
    "dist:build-server": "webpack --config webpack/webpack.server.prod.js",
    "dist:build-client": "webpack --config webpack/webpack.client.prod.js",
    "typecheck": "flow check",
    "lint": "prettier --write \"src/**/*.{js,jsx}\"",
    "pretest": "yarn run lint && yarn run typecheck",
    "test": "jest",
    "coverage": "jest --coverage",
    "precommit": "lint-staged"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.14.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "cross-env": "^3.2.3",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.10.1",
    "flow-bin": "^0.41.0",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "lint-staged": "^3.3.1",
    "nodemon": "^1.11.0",
    "prettier": "^0.21.0",
    "react-hot-loader": "^3.0.0-beta.5",
    "react-test-renderer": "^15.4.2",
    "relay-compiler": "^1.0.0",
    "style-loader": "^0.18.2",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-hot-middleware": "^2.17.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.1.1",
    "prop-types": "^15.5.8",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.0.0",
    "recastai": "^3.4.1",
    "recompose": "^0.22.0",
    "redux": "^3.7.0",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.3.0",
    "styled-components": "^2.0.1"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ],
    "coveragePathIgnorePatterns": [
      "src/shared/config.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComa": "es5",
    "brackSpacing": true,
    "parser": "flow"
  }
}
